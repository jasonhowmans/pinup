{
    "manifest_version": 2,

    "name": "Pinup",
    "description": "The easiest way to capture websites",
    "version": "0.1",

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab"
        ],

    "background": {
        "scripts": ["lib/helpers.js", "lib/event.js"],
        "persistent": false
        },

    "browser_action": {
        "default_icon": "icon.png"
        }
}