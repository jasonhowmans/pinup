{
    "manifest_version": 2,

    "name": "Pinup",
    "description": "The easiest way to capture websites",
    "version": "0.1",

    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*"
        ],

    "background": {
        //"page": "background.html",
        "scripts": ["vendor/html2canvas.min.js", "lib/helpers.js", "lib/event.js"],
        "persistent": false
        },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/inject.js", "vendor/html2canvas.min.js"]
        }],

    "browser_action": {
        "default_icon": "icon.png"
        }
}